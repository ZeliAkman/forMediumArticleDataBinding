<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mainNesnesi"
            type="com.example.databindingformediumarticle.MainActivity" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/sayi1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="127dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="Sayı 1"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@+id/carp"
            app:layout_constraintStart_toStartOf="@+id/topla"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/sayi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="Sayı 2"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="@+id/sayi1"
            app:layout_constraintTop_toBottomOf="@+id/sayi1" />

        <Button
            android:id="@+id/topla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="66dp"
            android:layout_marginEnd="65dp"
            android:text="Topla"
            android:onClick="@{() -> mainNesnesi.buttonToplama(sayi1.getText.toString(),sayi2.getText.toString()) }"
            app:layout_constraintBaseline_toBaselineOf="@+id/carp"
            app:layout_constraintEnd_toStartOf="@+id/carp"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/carp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="104dp"
            android:text="Çarp"
            android:onClick="@{() -> mainNesnesi.buttonCarpma() }"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sayi2" />

        <TextView
            android:id="@+id/sonuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Sonuç : "
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="@+id/sayi2"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="@+id/sayi2"
            app:layout_constraintTop_toBottomOf="@+id/topla" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>